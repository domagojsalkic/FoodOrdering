@model IEnumerable<FoodOrder.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="table row">
        @foreach (var product in Model)
        {
        <div class="offset-1">
            @if (Model.Count() > 0)
            {
                <div class="card text-white bg-dark mb-3" style="text-align: center; min-width: 17rem">
                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <a asp-controller="OrderItems" asp-action="Create" asp-route-id="@product.Id" class="btn btn-success">Add</a>
                    </div>
                </div>
            }
        </div>
        }
</div>