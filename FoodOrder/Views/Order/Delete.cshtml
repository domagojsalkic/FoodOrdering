@model FoodOrder.Models.Order

@{
    ViewData["Title"] = "Delete";
}


<h1>Are you sure you want to delete order number: @Html.DisplayFor(o=>o.Id)?</h1>
<div >
    <form class="form-group row" asp-action="Delete">
        <div class="col-2">
            <input type="submit" value="Delete" class="btn btn-danger form-control" />
        </div>
        <div class="col-3">
            <a asp-action="AllOrders" class="btn btn-success form-control">Back to List</a>
        </div>
    </form>
</div>

